{
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "./build",
        "outDir": "./build",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
       "**/*",
       "**/*.json"
    ],
    "exclude": [
        "node_modues"
    ]
}